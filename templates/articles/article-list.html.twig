{% block stylesheets %} <link rel="stylesheet" href="{{ asset('assets/css/article_list.css') }}"> {% endblock %}

<section class="article-list">

        {% for article in articles %}
        <article class="article-listed article-{{ texthandler.translateWeight(article.weight) }}">
            <div class="article-category">
                <a href="{{ path('article_thorough', { 'keyword' : '*', 'categories' : article.category }) }}" class="url-link">
                    {{ texthandler.reverseCategory(article.category) | raw }}</a>
            </div>
            <div class="article-inside">
                    <a href="{{ path('article_read', {'id' : article.id })}}">
                        <div class="article-image">
                    <img src="{{ article.image }}"  alt="">

                </div>
                <div class="article">
                    <a href="{{ path('article_read', {'id' : article.id })}}">
                    <h1 class="headingband">{{ article.titre }}</h1></a>
                    <div class="article-heading">
                        <span class="list-authordate">Écrit le {{ article.date_creation | date('d/m/Y') }} 
                            à {{ article.date_creation | date('H:i') }}, par {{ article.author }}. 
                        </span>
                        <span class="comment-count" href="#">
                            <a href="{{ path('article_read', {'id' : article.id })}}#current-page">{{ article.comment_count }}</a>
                        </span>
                    </div>
                    <div class="article-content">
                        {{ texthandler.raccourcir(article.content, article.weight) }}
                    </div>
                    <a href="{{ path('article_read', {'id' : article.id })}}"> <div class="bouton article-more">... Lire la suite</div></a>
                </div>
            </div>
        </article>
        {% endfor %}
    
    </section>