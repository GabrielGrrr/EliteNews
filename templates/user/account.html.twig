{% extends 'base.html.twig' %}

{% block title %} Profil Personnel {% endblock %}
{% block stylesheets %} 
<link rel="stylesheet" href="{{ asset('assets/css/full_page_form.css') }}"> 
<link rel="stylesheet" href="{{ asset('assets/css/account.css') }}"> 
{% endblock %}

{% block body %}

<section class="full-page-form main-section">
        <h1 class="headingband">Modifier vos informations personnelles</h1>
        {{ form_start(accountForm) }}
        {{ form_row(accountForm.login) }}
        {{ form_row(accountForm.avatar) }}
        {{ form_row(accountForm.subtitle) }}
        {{ form_row(accountForm.signature) }}
        {{ form_row(accountForm.localisation) }}
        {{ form_row(accountForm.newsletter_subscriber) }}
        <button type="submit" onclick="" class="bouton">
        Modifier
        </button>
        {{ form_end(accountForm) }}

        <div id ="user-infos">
        <img src="{{ user.avatar }}" id="user-avatar" alt="">
        <p>Inscrit depuis le {{ user.getDateInscription | date('d/m/Y') }}</p>
        <p>A posté {{ commentCount }} commentaires.</p>
        {% if user.getModerationStatus == 1 %}
        <p>Statut de modération : 1 avertissement.</p>
        {% else %} 
        {% if user.getModerationStatus == 2 %}
        <p>Statut de modération : 2 avertissement,<br/> attention, le prochain sera le dernier.</p>
        {% else %}
        <p>Compte en règle.</p>
        {% endif %}
        {% endif %}

                        <span class="openmodal iconbutton hoverable">
                        <div class="modalbg" >
                            <div class="modalcontent">
                                <div class="modalcross hoverable cancelmodal"><i class="fas fa-times"></i></div>
                                <h1>Confirmer la suppression</h1>
                               <p> Êtes-vous sûr ? En appuyant sur ce lien, vous confirmez la suppression définitive de votre compte ...</p>
                                <a href="{{ path('remove_user', { 'id' : user.id }) }}">
                                    <button class="bouton">Je suis tout plein d'assurance</button></a>
                                    <button class="bouton cancelmodal">No, Who am-I kidding !</button>
                            </div>
                        </div>
                        Supprimer le compte</span>
        </div>
        
</section>

{% endblock %}